<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.  
                 -->
<hibernate-configuration>

<session-factory>
	<!-- Dialect -->
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>

	<!-- Drive Class -->
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>

	<!-- URL -->
	<property name="jndi.url">jdbc:mysql://localhost/blog?</property>

	<!-- password -->
	<property name="connection.password">140255</property>

	<!-- userName -->
	<property name="connection.username">root</property>

	<!-- show SQL that Hibernate sends to database -->
	<property name="hibernate.show_sql">true</property>


	<property name="hibernate.current_session_context_class">
		thread
	</property>

	<property name="hibernate.connection.pool_size">2</property>

	<!-- hbm.xml mapping  -->
	<property name="hibernate.connection.pool_size">2</property>
	<mapping resource="com/blog/model/Message.hbm.xml" />
	<mapping resource="com/blog/model/ReplyMessage.hbm.xml" />
	<mapping resource="com/blog/model/User.hbm.xml" />
</session-factory>

</hibernate-configuration>